<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Favorilere Ekle</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.2.0/css/all.css">
    <link rel="stylesheet" href="~/Css/Stylee.css" />
</head>

<body>
    <section id="navbarMenu">
        <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
            <div class="container">
                <button class="navbar-toggler" data-toggle="collapse" data-target="#vbrCollapse">
                    <span class="navbar-toggler-icon"></span>

                </button>
                <a href="#" class="navbar-brand text-white w-50">ASP.NET CORE MVC</a>
                <div class="collapse navbar-collapse" id="vbrCollapse">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item active px-2"><a class="nav-link" href="#headerSection">Ana Sayfa</a></li>

                    </ul>
                </div>
            </div>
        </nav>
    </section>
    <section id="introduction" class="py-5">
        <div class="container-fluid py-5">
            <div class="row">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-body shadow">
                            <div class="categories">
                                <h4 class="display-4 text-center">
                                    <i class="fas fa-window-maximize px-3 text-warning"></i>Kategoriler
                                </h4>
                                <hr class="border-warning" />
                                @await Component.InvokeAsync("CategoryList")
                            </div>
                        </div>
                    </div>
                    <div class="product-favorites mt-3">
                        <h3 class="display-3 text-center"><i class="far fa-heart text-danger"></i>Favorilerim</h3>
                        <hr class="border-danger">
                        @await Component.InvokeAsync("Like")
                    </div>
                </div>


                <div class="col-md-6">
                    <h4 class="display-4 text-center">Ürünler<i class="fas fa-shopping-basket px-3 text-success"></i></h4>
                    <hr class="border-dark">
                    <div>
                        @RenderBody() <!--İndex.cshtml burası oluyor.-->
                    </div>
                </div>
            </div>
        </div>
    </section>



</body>

<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js">
</script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js">
</script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
<script src="script.js"></script>

</html>